print("안녕하세요.끝말잇기 게임입니다")
for x in range(1,100):
    firstword=input("첫 단어를 입력하세요?")
    print("좋습니다")
    for i in range(0,100):
        secondword=input("다음 단어를 입력")
        if firstword[-1]==secondword[0]:
            print("좋습니다")
            firstword=secondword
        else:
            print("틀린단어입니다")
            break
